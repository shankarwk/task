

  <% if notice %>
  <div class="alert alert-primary text-center" role="alert">
    <%=notice %>
  </div>
  
    <%end%> 
  

<br>
<div class="col-lg-6 mx-lg-auto card shadow mt-5">

     <div class="card-header">
      <h3 class="card-title text-center">SIGN UP</h3>
    </div>
  <div class="card-body">
<%= form_with model: @form_data , method: :post,url:create_path  do |form| %>




  <div class="form-group mb-2">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control form-control-lg"  %>
  </div>

    <div class="form-group mb-2">
    <%= form.label :email %><br>
     <%= form.email_field :email, class: "form-control form-control-lg"%>
  </div>

   <div class="form-group mb-2">
    <%= form.label :password %><br>
    <%= form.password_field :password , class: "form-control form-control-lg"%>
  </div >


  <div>
    <%= form.submit "Submit", class: "btn btn-primary btn-lg"  %>
  </div>
<% end %>




</div>
</div>


